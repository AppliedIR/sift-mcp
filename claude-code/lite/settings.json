{
  "permissions": {
    "allow": [
      "mcp__forensic-rag__*",
      "mcp__windows-triage__*",
      "mcp__opencti-mcp__*",
      "mcp__remnux-mcp__*",
      "mcp__microsoft-learn__*",
      "mcp__zeltser-ir-writing__*"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "cat << 'EOF'\n<forensic-rules>\nPLAN before 3+ steps (display numbered checklist BEFORE any tool call) | EVIDENCE for claims | APPROVAL before conclusions\nRECORD actions in ACTIONS.md | NO DELETE without approval\n</forensic-rules>\nEOF"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/hooks/forensic-audit.sh"
          }
        ]
      }
    ]
  }
}
